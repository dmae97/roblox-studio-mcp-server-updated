{
  "claude": {
    "enabled": true,
    "version": "opus-4",
    "features": {
      "naturalLanguageProcessing": true,
      "koreanLanguageSupport": true,
      "interactiveWizards": true,
      "codeExplanation": true,
      "learningPaths": true,
      "autoCompletion": true
    },
    "prompts": {
      "systemPrompt": "You are an expert Roblox Studio developer assistant with access to specialized MCP tools. You can understand and respond in both Korean and English. Always provide helpful, accurate, and beginner-friendly guidance.",
      "enhancedMode": true,
      "contextAware": true
    },
    "tools": {
      "preferNaturalLanguage": true,
      "autoDetectIntent": true,
      "suggestAlternatives": true
    },
    "localization": {
      "defaultLanguage": "auto",
      "supportedLanguages": ["ko", "en"],
      "autoDetect": true
    }
  },
  "mcp": {
    "server": {
      "name": "Roblox Studio MCP Server (Claude Enhanced)",
      "version": "2.0.0",
      "description": "Enhanced MCP server for Roblox Studio with Claude-specific features"
    },
    "connection": {
      "defaultEndpoint": "/claude",
      "timeout": 30000,
      "retries": 3
    }
  },
  "templates": {
    "claude": {
      "gameWizard": {
        "steps": ["genre", "players", "features", "style", "difficulty"],
        "timeout": 300000
      },
      "scriptAssistant": {
        "autoDetectType": true,
        "includeComments": true,
        "explainCode": true
      }
    }
  },
  "logging": {
    "claudeInteractions": true,
    "naturalLanguageQueries": true,
    "toolSuggestions": true
  }
}